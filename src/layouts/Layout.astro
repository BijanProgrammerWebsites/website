---
import '@styles/fonts.scss';
import '@styles/global.scss';
import '@styles/button.scss';
import '@styles/cta.scss';
import '@styles/header.scss';
import '@styles/main.scss';
import '@styles/introduction.scss';
import '@styles/hard-skills.scss';
import '@styles/soft-skills.scss';
import '@styles/jobs.scss';
import '@styles/projects.scss';
import '@styles/contact.scss';
import '@styles/footer.scss';
import '@styles/back-to-top.scss';

import Header from '@components/Header.astro';
import BackToTop from '@components/BackToTop.astro';
import Footer from '@components/Footer.astro';

const title = 'وب‌سایت شخصی بیژن عیسی‌پور';
const description =
    'من یا مسئولیتی رو نمی‌پذیرم یا اگه پذیرفتم به بهترین شکل ممکن انجامش میدم. وقتی با من کار کنید همیشه مطمئن هستید که پروژه‌ها با بهترین کیفیت و در زمان مقرر انجام میشن.';
const keywords = ['BijanProgrammer', 'بیژن عیسی‌پور', 'Bijan', 'Programmer', 'بیژن', 'عیسی‌پور'].join(',');
const imageAlt = 'تصویری از چهره‌ی بیژن با پس‌زمینه‌ی طبیعت';
---

<!doctype html>
<html lang="fa" dir="rtl" prefix="og: http://ogp.me/ns#">
    <head>
        <title>{title}</title>

        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <meta name="author" content="بیژن عیسی‌پور" />
        <meta name="description" content={description} />
        <meta name="keywords" content={keywords} />

        <meta property="profile:first_name" content="بیژن" />
        <meta property="profile:last_name" content="عیسی‌پور" />
        <meta property="profile:username" content="BijanProgrammer" />
        <meta property="profile:gender" content="male" />

        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:url" content="https://bijanprogrammer.com/" />
        <meta property="og:locale" content="fa_IR" />
        <meta property="og:type" content="website" />
        <meta property="og:image:type" content="image/webp" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:image:alt" content={imageAlt} />
        <meta property="og:image" content="https://bijanprogrammer.com/banner.webp?v=1" />

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image:type" content="image/webp" />
        <meta name="twitter:image:width" content="1200" />
        <meta name="twitter:image:height" content="630" />
        <meta name="twitter:image:alt" content={imageAlt} />
        <meta name="twitter:image" content="https://bijanprogrammer.com/banner.webp?v=1" />

        <meta name="msapplication-TileColor" content="#00a300" />
        <meta name="theme-color" content="#ffffff" />

        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=1" />
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=1" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=1" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg?v=1" color="#1fad1f" />
        <link rel="shortcut icon" href="/favicon.ico?v=1" />

        <link rel="manifest" href="/manifest.json?v=1" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
        <BackToTop />
    </body>
</html>
